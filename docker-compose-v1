version: '3'
services:

  config-test:
    image: pknw1/config:latest
    container_name: config-test
    restart: always 
    volumes:
      - /root/.ssh:/root/.ssh:ro
      - /etc/localtime:/etc/localtime
      - config:/config2
    environment:
      - TZ="Europe/London"
      - PUID=0
      - PGID=0

  container-test:
    image: portainer/portainer:latest
    container_name: test-portainer
    restart: always
    hostname: portainer2
    networks:
      - proxy
    depends_on:
      - "config-test"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /etc/ssl:/etc/ssl
      - /etc/localtime:/etc/localtime
      - /tmp:/tmp
      - config:/data
      - /shared:/shared
    environment:
      - TZ="Europe/London"
      - VIRTUAL_HOST=portainer2.pknw1.co.uk
      - VIRTUAL_PORT=9001
      - PUID=666
      - PGID=666

volumes:
  config:

networks:
  proxy:
    external:
      name: proxy
